@model Student
@{
    ViewData["Title"] = "Detay";
}

<h3>Öğrenci Detayları</h3>
<div class="container">
    <div class="row">
        <div class="col-4"> Öğrenci Adı </div>
        <div class="col-4"> @Model.Name </div>
    </div>
    <div class="row">
        <div class="col-4"> Öğrenci Bölümü </div>
        <div class="col-4"> @Model.Department  </div>
    </div>
    <div class="row">
        <div class="col-4"> Öğrenci Numarası </div>
        <div class="col-4"> @Model.StuID  </div>
    </div>
</div>
